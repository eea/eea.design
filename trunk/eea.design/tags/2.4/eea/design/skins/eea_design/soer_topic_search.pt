<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main" tal:define="view context/@@soer_topic_search_logic">

            <h1 tal:content="view/getTopicLabel"></h1>

            <p class="documentDescription">
                Below you will find all SOER content related to <span tal:content="view/getTopicLabel"/>
            </p>

            <div class="visualClear"></div>

            <h2>Synthesis</h2>
            <div class="photoAlbumEntry" tal:repeat="item view/getSynthesisReport">
                <a tal:attributes="href item/url; title item/description">
                    <span class="photoAlbumEntryWrapper">
                        <img tal:attributes="src python: item['url'] + '/image_thumb'"/>
                    </span>
                    <span class="photoAlbumEntryTitle" tal:content="item/title"></span>
                </a>
            </div>
            <div class="visualClear"></div>

            <h2>Europe's environment: thematic assessments</h2>
            <div class="photoAlbumEntry" tal:repeat="item view/getThematicAssesments">
                <a tal:attributes="href item/url; title item/description">
                    <span class="photoAlbumEntryWrapper">
                        <img tal:attributes="src python: item['url'] + '/image_thumb'"/>
                    </span>
                    <span class="photoAlbumEntryTitle" tal:content="item/title"></span>
                </a>
            </div>
            <div class="visualClear"></div>

            <h2>Europe and the world: global megatrends</h2>
            <div class="photoAlbumEntry" tal:repeat="item view/getGlobalMegatrends">
                <a tal:attributes="href item/url; title item/description">
                    <span class="photoAlbumEntryWrapper">
                        <img tal:attributes="src python: item['url'] + '/image_thumb'"/>
                    </span>
                    <span class="photoAlbumEntryTitle" tal:content="item/title"></span>
                </a>
            </div>
            <div class="visualClear"></div>

            <h2>Country environment</h2>
            <div class="photoAlbumEntry" tal:repeat="item view/getCountryEnvironment">
                <a tal:attributes="href item/url; title item/description">
                    <span class="photoAlbumEntryWrapper">
                        <img tal:attributes="src python: item['url'] + '/image_thumb'"/>
                    </span>
                    <span class="photoAlbumEntryTitle" tal:content="item/title"></span>
                </a>
            </div>
            <div class="visualClear"></div>
        </metal:main-macro>
    </div>
</body>

</html>
