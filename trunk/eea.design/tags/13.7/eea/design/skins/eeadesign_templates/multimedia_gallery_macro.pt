<tal:multimedia metal:define-macro="multimedia"
        tal:define="frontpage_view frontpage_view|context/@@frontpage_highlights;
        language python:request.get('LANGUAGE');
        folderContents folderContents|python: frontpage_view.getMultimedia() if not language else frontpage_view.getMultimedia(language=language);
        plone_view nocall:plone_view|context/@@plone;
        hide_listing hide_listing|python: True;
        hide_album hide_album|python: False;
        ajax ajax|python:True;
        frontpage_properties context/portal_properties/frontpage_properties;
        limit_display frontpage_properties/noOfMultimedia|python:6;">

    <tal:folderContents condition="folderContents">
        <div metal:use-macro="here/frontpage_macros/macros/gallery-condition" />
    </tal:folderContents>

    <metal:languages tal:condition="not:folderContents">
        <metal:results use-macro="here/articles_gallery_macro/macros/noresults" />
    </metal:languages>
</tal:multimedia>
