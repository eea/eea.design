/*
** Breadcrumb trail
** Adopted from Eionet
*/

.breadcrumbitem, .breadcrumbitemlast {
    padding-right:0px;
    padding-left:11px;
}
.breadcrumbitemlast {
    font-weight:bold;
}
a.breadcrumbitem {
    color:&dtml-linkColor;;
}

/*
** Collapsible areas classes.
** further info in javascript
** and style reference
*/

.collapsibleHeader {
 cursor: pointer;
 background: transparent url(<dtml-var portal_url>/p_/pl) 0% 50% no-repeat;
 padding: 1px 0px 1px 20px;
}

.expandedBlockCollapsible .collapsibleContent {
    display: block;
}

.collapsedBlockCollapsible .collapsibleContent {
    display: none;
}

/*
** Tables
** Adopted from Eionet
*/

/* Default are layout tables. We can not really style those. It would have too many side effects */
table {
    empty-cells: show;
    font-size: 0.9em;
}

td {
    line-height: normal;
    text-decoration: none;
}

th {
    font-weight: bold;
    line-height: normal;
    padding: 0.1em 0.5em;
    text-decoration: none;
}
th a, th a:link, th a:visited {
    color: #000;
}

/* Data tables */
table.datatable {
    border: 1px solid #b6b6b6;
    border-collapse: collapse;
    color: #666666;
    margin: 1em 0.5em;
}
.datatable th {
    text-align: center;
    background-color: #f6f6f6;
    font-weight: bold;
    /* border-top:    1px solid white;
    border-bottom: 1px solid white;*/
}
.datatable th.scope-row { /* IE6 doesn't understand [scope="row"] */
    text-align: right;
}
.datatable th[scope="row"] {
    text-align: right;
}

.datatable .number {
    text-align: right;
}
.datatable .sum {
    font-weight: bold;
}

.datatable td, .datatable th  {
    padding: 0.3em;
    vertical-align: top;
}
.datatable tr {
    /* border-top:    1px solid #f6f6f6;
    border-bottom: 1px solid #f6f6f6;*/
}
.datatable tr.zebraeven {
    background-color: #f6f6f6;
}

/* Sortable table columns */
.sortable, .listing {
    border: 1px solid #b6b6b6;
    color: #666666;
    line-height:normal;
}

.sortable tbody tr {
}

.sortable td, .listing td {
    padding: 0.2em;
    border-bottom: 1px dotted #b6b6b6;
}
.sortable th, .listing th {
    background: #f1efe5;
    border: 2px outset #adc095; /* #495b6b;*/
    margin: 0;
    padding: 0;
    white-space: nowrap;
    vertical-align: top;
    text-transform: none;
}

.sortable th a:link,
.listing th a:link,
.sortable th a:visited,
.listing th a:visited,
.sortable th span,
.listing th a:visited {
    display:block;
    text-decoration: none;
    font-weight: bold;
    padding:1px 0.5em;
}

.sortable thead th a:hover,
.listing thead th a:hover,
.listing thead th:hover {
    background: &dtml-corporateOrange;;
    color: #fff;
}

/* CSS3 Zebra effect for certain tables */
.listing tr:nth-child(odd) td,
.sortable tr:nth-child(odd) td
.datatable tr:nth-child(odd) td {
    background-color: #ececec;
}

/* Tables for arranging formulars */

.formtable {
    border-collapse: collapse;
}

.formtable th {
    vertical-align: top;
    text-align: right;
    border: none;
    background: transparent;
}

.formtable th.scope-col { /* IE6 doesn't understand [scope="col"] */
    text-align: left;
}

.formtable th[scope="col"] {
    text-align: left;
}

.formtable td  {
    vertical-align: top;
}


/* Styles which apply only in central content area */

#content blockquote {
    width: 70%;
    margin: 1.0em auto;
    padding: 1.5em 1em 1em 3em;
    background: &dtml-lightBackgroundColor; url(&dtml-portal_url;/open_quote.gif) 0.5em 0.75em no-repeat;
    color: #000000;
    clear:both;
}

#content blockquote.quote-right {
  float: right;
  width: 15em;
}

#content blockquote.quote-left {
  float: left;
  width: 15em;
  margin:2em 2em 0.4em 0em;
}

#content blockquote p {
    font-weight:bold;
    background: url(&dtml-portal_url;/close_quote.gif);
    background-position: bottom right;
    background-repeat: no-repeat;
    padding: 0em 2.25em 1em 0em;
}

#content blockquote p.source {
    text-align:right;
    background: none;
    font-style: normal;
    font-weight:normal;
    font-size: x-small;
    padding: 0em 1em 0em 0em;
}

/* Link styles in content headers */
#content h1 a,
#content h2 a,
#content h3 a,
#content h4 a,
#content h5 a,
#content h6 a {
    text-decoration: none;
    padding-right: 0.9em !important;
    border: none;
}

#content .header-with-go-back-button .back-to-toc-button {
    background: url(&dtml-portal_url;/arrow_up_12x12.png) right center no-repeat;
    width: 12px;
    height: 12px;
    padding-left: 6px;
    display: none;
}

#content .header-with-go-back-button:hover .back-to-toc-button {
    display: inline;
}

/* css 3 feature - Multicolumn - Firefox 1.5, not IE 6 */
#content div#multicolumn {
    -moz-column-width: 150px;
    -moz-column-gap: 20px;
    column-width: 150px;
    column-gap: 20px;
}

/* Styles which can be used on any area */

.boxShadowedDown, .featured, #edit-bar, #contentActionMenus, #portal-personaltools,
#portal-personaltools, #faceted-form .widget-fieldset legend,
#forum, #community, #mobile,
.shortcut-default {
    -webkit-box-shadow: 0px 2px 2px #888;
       -moz-box-shadow: 0px 2px 2px #888;
        -ms-box-shadow: 0px 2px 2px #888;
         -o-box-shadow: 0px 2px 2px #888;
            box-shadow: 0px 2px 2px #888;
}

.boxShadowedDownRight, .actionMenuContent {
    -webkit-box-shadow: 2px 2px 1px #888;
       -moz-box-shadow: 2px 2px 1px #888;
        -ms-box-shadow: 2px 2px 1px #888;
         -o-box-shadow: 2px 2px 1px #888;
            box-shadow: 2px 2px 1px #888;
}

#keyfacts-slider .slidePortlet, #globalnav-holder {
    -webkit-box-shadow: 0px 2px 2px #333;
       -moz-box-shadow: 0px 2px 2px #333;
        -ms-box-shadow: 0px 2px 2px #333;
         -o-box-shadow: 0px 2px 2px #333;
            box-shadow: 0px 2px 2px #333;
}

.greenGradientBackgroundUp, #edit-bar, .actionMenuContent, #portal-personaltools,
#faceted-form .widget-fieldset legend {
    background-color: &dtml-corporateGreenTwo;;
    background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(&dtml-corporateGreen;), to(&dtml-corporateGreenTwo;));
    background-image: -webkit-linear-gradient(center top , &dtml-corporateGreen;, &dtml-corporateGreenTwo;);
    background-image:    -moz-linear-gradient(center top , &dtml-corporateGreen;, &dtml-corporateGreenTwo;);
    background-image:     -ms-linear-gradient(center top , &dtml-corporateGreen;, &dtml-corporateGreenTwo;);
    background-image:      -o-linear-gradient(center top , &dtml-corporateGreen;, &dtml-corporateGreenTwo;);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='&dtml-corporateGreen;', endColorstr='&dtml-corporateGreenTwo;'); /* IE6 & IE7 */
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='&dtml-corporateGreen;', endColorstr='&dtml-corporateGreenTwo;')"; /* IE8+ */
    background: linear-gradient(&dtml-corporateGreen;, &dtml-corporateGreenTwo;); /* the w3c standard */
}

.greenGradientBackgroundDown, #contentActionMenus {
    background-color: &dtml-corporateGreenTwo;;
    background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(&dtml-corporateGreenTwo;), to(&dtml-corporateGreen;));
    background-image: -webkit-linear-gradient(center top , &dtml-corporateGreenTwo;, &dtml-corporateGreen;);
    background-image:    -moz-linear-gradient(center top , &dtml-corporateGreenTwo;, &dtml-corporateGreen;);
    background-image:     -ms-linear-gradient(center top , &dtml-corporateGreenTwo;, &dtml-corporateGreen;);
    background-image:      -o-linear-gradient(center top , &dtml-corporateGreenTwo;, &dtml-corporateGreen;);
}

/* standard figure, used for articles and pages.
can be floated left or right with additional
class figure-right or figure-left */

.figure p,
.figure-plus p,
.figure-container p,
.figure-standalone p {
     margin-bottom: 0;
}

.figure img {
    border: 1px solid darkGray;
    margin-bottom: 1em;
}

.figure, .figure-plus {
  text-indent: 0;
}
.figure-title, .figure-nr {
    font-weight: bold;
}
.figure-image {
     text-align: center;
     clear: both;
}

.figure-note {
    font-weight: normal;
}
.figure-source-copyright {
    text-align: right;
}
.figure-plus-container {
margin:0.8em 0em 0.5em 0.5em;
}
.figure-plus {
background-color: #fff;
border: 1px solid #a9a9a9;
margin: -6px 0 0 -6px;
padding: 4px;
/*position: relative;*/
zoom: 1;
}

.figure-standalone {
    background-color: #fff;
    border: 1px solid #a9a9a9;
    margin: 0 0 0 0;
    padding: 4px;
}

/* */
.figure-right .figure,
.figure-right .figure-plus-container {
float: right;
margin-left: 1em;
}

.shadowed, .thumbnail-right img {
    display: block;
    background-color: #fff;
    margin: -6px 0px 0px -6px;
    border: 1px solid #a9a9a9;
    padding: 4px;
}

.related-in-content-area .figure-plus-container {
margin-left: 3em;
}

/* floating left or right */

.figure-left .figure,
.figure-left .figure-plus-container {
    float: left;
    margin-right: 0.5em;
}

span.figure-left {
    display: block;
}

/* available scaled sizes to be used in  combination of .figure-plus-container
        sizes= {'large'   : (768, 768),
                'preview' : (400, 400),
                'mini'    : (180,135),
                'thumb'   : (128, 128),
                'tile'    :  (64, 64),
                'icon'    :  (32, 32),
                'listing' :  (16, 16),
               },

*/

.figure-container-imagelarge,
.figure-container-imagelarge .figure-image,
.figure-container-imagelarge p {
width:768px;
}


.figure-container-imagepreview,
.figure-container-imagepreview .figure-image,
.figure-container-imagepreview p {
width:400px;
}
.figure-container-imagemini,
.figure-container-imagemini .figure-image,
.figure-container-imagemini p {
width:180px;
}
.figure-container-imagethumb,
.figure-container-imagethumb .figure-image,
.figure-container-imagethumb p {
width:128px;
}

.figure-container-imagetile,
.figure-container-imagetile .figure-image,
.figure-container-imagetile p {
width:64px;
}

.figure-container-imageicon,
.figure-container-imageicon .figure-image,
.figure-container-imageicon p {
width:32px;
}

.figure-container-imagelisting,
.figure-container-imagelisting .figure-image,
.figure-container-imagelisting p {
width:16px;
}

/* style for keyfacts slider */

#keyfacts-slider img.keyfacts-bgimg {
   min-width: 618px;
   min-height: 348px;
   width: 620px;
   position: absolute;
   bottom: 0;
   left: 0;
}

#keyfacts-slider dl {
   width: 629px;
   height: 140px !important;
   position: relative;
   top: -160px;
   left: -2px;
   opacity: 0.8;
   margin-bottom: -120px;
}

#keyfacts-slider .slidePortlet {
    position: relative;
    overflow: hidden;
    padding: 0;
    background: &dtml-corporateBlueTwo;;
    color: #FFFFFF;
    width: 618px !important;
    left: 0 !important;
    top: -153px !important;
}

#keyfacts-slider .slidePortlet .portletItem {
    position: absolute;
    margin: 0;
    padding: 0;
    width: 100%;
    font-size: 115%;
}

#keyfacts-slider .slidePortlet .portletItem span {
    display: block;
    padding: 10px 25px;
}

#keyfacts-slider .slidePortlet .slideButton {
    position: absolute;
    top: 40%;
    margin: 4px;
    padding: 10px 2px;
    width: 8px;
    height: 8px;
    background: transparent url(&dtml-portal_url;/accordion_left.png) no-repeat scroll center center;
    cursor: pointer;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
}

#keyfacts-slider .slidePortlet .slideButton.next {
    right: 0;
    background: transparent url(&dtml-portal_url;/accordion_right.png) no-repeat scroll center center;
}

#keyfacts-slider .slidePortlet .slideButton.play {
    position: absolute;
    right: 0;
    top: 8px;
    margin-right: 10px;
    padding: 5px;
    border: 0;
    -webkit-border-radius: 0;
    -moz-border-radius: 0;
    border-radius: 0;
    background: transparent url('&dtml-portal_url;/sprite-eeaimages.png') no-repeat scroll -446px -216px;
}

#keyfacts-slider .slidePortlet .slideButton.play.pause {
    background: transparent url('&dtml-portal_url;/sprite-eeaimages.png') no-repeat scroll -454px -191px;
}

#keyfacts-slider .slidePortlet a.moreLink {
    background: none;
    padding-left: 0;
    text-decoration: underline;
    color: white !important;
    cursor: pointer;
}

#keyfacts-slider .slidePortlet a.moreLink:hover {
    text-decoration: none;
}

#keyfacts-slider .slidePortlet .portletHeader {
    padding-left: 25px !important;
    text-shadow: 1px 1px #000000;
    background: &dtml-corporateBlueTwo;;
    color: #FFFFFF !important;
}

#keyfacts-slider .keyfactsImgContainer {
    overflow: hidden;
    text-align: center;
    position: relative;
    height: 280px;
}

