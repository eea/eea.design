<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<metal:portlet define-macro="portlet-unused">
<div class="dropShadow">
 <dl class="portlet">
    <dt class="portletHeader">
      <span class="portletContentNavigation">
       <a href="" title="previous"><img src="box-arrows.gif" alt="previous/next" /></a>
      </span>
        For kids
    </dt>
    <dd class="portletItem">
        <img id="agents" src="http://www/images/teaser_leftbox_eco_agents.gif" alt="Eco agents logo" width="100%"/>
    </dd>

    <dd class="portletItem subHeader">
        <a href="" title="">Ecoagent</a>
    </dd>
    <dd class="portletItem">
        Lorem ipsum dolor sit amet, consetetur sadipscing elitr.
        <a href="" title=""
           tal:attributes="href here/absolute_url;
                           title string:more" class="moreLink">More</a>
    </dd>
 </dl>
</div>
</metal:portlet>

<metal:portlet define-macro="promotion-list" tal:condition="nocall:promotionCategoryFolder|nothing">
<div class="portlet-promotions"
    tal:define="res promotionCategoryFolder/@@oneCategoryPromotions;
                category res/category;
                promotions res/promotions">

<dl class="portlet" id=""
    tal:attributes="id string:${category/id}-portlet">
    <dt class="portletHeader">
        <a href="" title=""
           tal:attributes="href category/url;
                           title category/Title"
           tal:content="category/Title">Category</a>
    </dt>

    <tal:promotions repeat="promo promotions">
    <dd class="portletItem" id=""
        tal:attributes="id promo/id;">
        <a href="" title="" class="portletHeader"
           tal:attributes="href promo/url;
                           title promo/Description">
        <tal:title tal:content="promo/Title">Title</tal:title><br clear="all" /></a>
    </dd>
    </tal:promotions>
</dl>
</div>
</metal:portlet>

<metal:portlet define-macro="promotion-list-one-image" tal:condition="promotions|nothing">
<div class="portlet-promotions portlet-promotions-one-image"
     tal:define="category catInfo|category;
                 categoryUrl category/url|category/absolute_url;">

    <div class="portletHeader">
        <a href="" title=""
           tal:attributes="href categoryUrl;
                           title category/Title"
           tal:content="category/Title">Category</a>
    </div>

<dl class="portlet" id=""
    tal:attributes="id string:${category/id}-portlet">
    <tal:promotions repeat="promo promotions">
    <dd class="portletItem" id=""
        tal:attributes="id promo/id;">
        <a href="" title="" class="portletHeader"
           tal:attributes="href promo/url;
                           title promo/Description">
        <tal:title tal:content="promo/Title">Title</tal:title><br clear="all" />
        <img src="http://www.eea.europa.eu/images/epeadiabox.jpg" alt=""
             tal:attributes="src promo/image;
                             alt promo/imageCaption|promo/Title;"
             tal:condition="repeat/promo/start" /></a>
    </dd>
    </tal:promotions>
</dl>
</div>
</metal:portlet>

<metal:portlet define-macro="all" tal:condition="frontpage_view|nothing">
<tal:promotionCategories repeat="promos frontpage_view/getPromotions">
    <tal:category tal:define="catInfo promos/category;
                              category catInfo;
                              promotions promos/promotions">
        <metal:promotionCategory use-macro="python:path(catInfo['macro'])" />
    </tal:category>
</tal:promotionCategories>
</metal:portlet>

<metal:portlet define-macro="portlet" tal:condition="promotions|nothing">
<div class="portlet-promotions"
     tal:define="category catInfo|category|nothing;
                 categoryUrl category/url|category/absolute_url|nothing;
                 catId category/id|string:themepromo">

    <div class="portletHeader" tal:condition="category/Title|nothing">
        <a href="" title=""
           tal:attributes="href categoryUrl;
                           title category/Title"
           tal:content="category/Title">Category</a>
    </div>

    <dl class="portlet promo-nav-portlet" id=""
        tal:attributes="id string:${catId}-portlet"
        tal:define="promo_number python:len(promotions)">
        <dt tal:condition="python:promo_number > 1">
            <span tal:attributes="id string:prev-${catId}" class="promo-prev">&nbsp;&nbsp;&nbsp;</span>&nbsp;&nbsp;
            <span tal:attributes="id string:count-${catId}-portlet" class="promo-count">0/0</span>&nbsp;&nbsp;
            <span tal:attributes="id string:next-${catId}" class="promo-next">&nbsp;&nbsp;&nbsp;</span>
        </dt>
        <tal:promotions repeat="promo promotions">
        <dd class="portletItem hide-promo" id=""
            tal:attributes="id string:${catId}-${promo/id}"
            tal:define="imglink promo/imglink|nothing">
            <metal:imglink tal:condition="imglink" tal:replace="structure imglink">
            <tal:comment>
                <a href="" class="portletHeader" title="Promo Description">
                    Promo Title
                    <br clear="all" />
                </a>
                <a href="imgurl" class="portletHeader" title="Promo Description">
                    Promo Title
                    <br clear="all" />
                    <img src="" alt="Image Caption"/>
                </a>
            </tal:comment>
            </metal:imglink>
        </dd>
        </tal:promotions>
    </dl>
</div>
</metal:portlet>

<metal:portlet define-macro="tabportlet">
    <dl class="portlet portlet-tabs" id="portlet-tabstxx">
        <dt class="portletHeader selected">
            <a href="#">1</a>
        </dt>
        <dt class="portletHeader">
            <a href="#">2</a>
        </dt>
        <dt class="portletHeader">
            <a href="#">3</a>
        </dt>
        <dd class="portletItem" id="portletitem-rectis">
            Some text
        </dd>
        <dd class="portletItem selected" id="portletitem-skovis">
            <img src="agents.gif" alt="Eco agents logo" />
            Lorem ipsum dolor sit amet, consetetur sadipscing elitr.
        </dd>
    </dl>
</metal:portlet>

</body>
</html>
