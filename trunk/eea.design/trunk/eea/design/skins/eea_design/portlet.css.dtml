/* Main portlet elements

  <dtml-with base_properties> (do not remove this)
  <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either)
*/

a.noHover {
   background: none;
}
/* EEA specific portlet classes */
.portlet .link,
.portlet .thumbnail-right {
   float: right;
   margin: 6px 0 0 8px;
   font-size: x-small;
   clear: right;
}
.portlet .thumbnail-right a { 
   border: none;
}

.portlet .date {
   font-weight: bold;
   font-size: x-small;
}

.portlet dt.portletItem {
   clear: both;
}
.portlet dd.portletSeparator {
   clear: both;
   border-bottom: 1px dotted &dtml-globalBorderColor;;
   margin:0;
   padding:0;
}
.portlet a.portletHeader {
   font-size: 1em;
   padding-bottom: 0.4em;
}

.portlet-rss  a {
   display:inline;
}

#content dt.portletItem a {
   font-weight: normal;
}

.portlet-rss .portletFooter {
   padding-top: 0.7em;
   padding-bottom: 0;
}

#portlet-subscribtion {
   padding:0.5em;
   height: auto;
}

.portlet-rss .portletHeader,
.portlet-promotions .portletHeader {
   margin-bottom: 0;
   padding: 0.3em 0;
}

.portlet-promotions {
   float: left;
   background-color: #fff;
   padding: 0 0 0 0;
}

.portlet-promotions .portletHeader {
   padding-left: 0.5em;
}
.portlet-promotions .portlet {
   padding: 0 0.5em 0.5em 0.5em;
   display: block;
}
.portlet-promotions .portlet a.portletHeader{
   background: #fff;
}

