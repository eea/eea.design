<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main" tal:define="template request/template|string:folder_listing">

        <ul id="eea-template-switch">
            <li><a tal:attributes="href string:${context/absolute_url}/smart_folder_listing">folder_listing</a></li>
            <li><a tal:attributes="href string:${context/absolute_url}/smart_folder_summary_view">folder_summary_view</a></li>
            <li><a tal:attributes="href string:${context/absolute_url}/smart_atct_album_view">atct_album_view</a></li>
        </ul>

        <div id="main-macro-content">
            <tal:folder_listing tal:condition="python:template == 'folder_listing'">
                <metal:main use-macro="here/folder_listing/macros/main"/>
            </tal:folder_listing>

            <tal:folder_summary_view tal:condition="python:template == 'folder_summary_view'">
                <metal:main use-macro="here/folder_summary_view/macros/main"/>
            </tal:folder_summary_view>

            <tal:atct_album_view tal:condition="python:template == 'atct_album_view'">
                <metal:main use-macro="here/atct_album_view/macros/main"/>
            </tal:atct_album_view>
        </div>

    </metal:main-macro>
    </div>
</body>
</html>
