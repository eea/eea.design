<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main">

            <h1 tal:content="object_title" class="documentFirstHeading">
                Title or id
            </h1>

            <div metal:use-macro="here/document_actions/macros/document_actions">
                Document actions (print, sendto etc)
            </div>

            <div class="visualClear"></div>

            <p class="documentDescription"
               tal:content="here/Description"
               tal:condition="here/Description">
                Description
            </p>

            <div class="visualClear"></div>

            <metal:listing define-macro="listing" tal:define="smartView context/@@smart_view_logic">
                <ul id="smart-view-switch" class="eea-horizontal-list eea-no-list-style" tal:define="templateName smartView/getTemplateName">
                    <li id="smart-listing" tal:attributes="class python:(templateName.endswith('folder_listing') and 'selected') or ''"><a tal:attributes="href string:smart_folder_listing">Listing</a></li>
                    <li id="smart-summary" tal:attributes="class python:(templateName.endswith('folder_summary_view') and 'selected') or ''"><a tal:attributes="href string:smart_folder_summary_view">Summary</a></li>
                    <li id="smart-album" tal:attributes="class python:(templateName.endswith('atct_album_view') and 'selected') or ''"><a tal:attributes="href string:smart_atct_album_view">Album</a></li>
                    <li id="smart-subfolder" tal:attributes="class python:(templateName.endswith('subfolder_view') and 'selected') or ''"><a tal:attributes="href string:smart_subfolder_view">Subfolder</a></li>
                </ul>
                <span id="smart-view-content">
                    <metal:block metal:use-macro="smartView/getListingMacro" />
                </span>
            </metal:listing>

        </metal:main-macro>
    </div>
</body>
</html>
