<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">
  <head>
  </head>
  <body>

    <div metal:fill-slot="portlets_one_slot">
      <tal:english condition="python:language == 'en'"
         tal:define="global frontpage_view context/@@frontpage_highlights;">
       <metal:rss use-macro="here/portlet_promotions/macros/all" />
       <metal:rss use-macro="here/portlet_calendar/macros/portlet" />
       </tal:english>

        <tal:localsite condition="python: language != 'en'">
	     <metal:rss use-macro="here/portlet_promotions/macros/all" />
             <tal:publications define="specific nocall:context/publications/latest|nothing;
	                               feeds specific/@@smartfolder_portlets|nothing"
	                       repeat="portlet feeds"
   			       tal:condition="specific">
	         <metal:macro use-macro="here/portlet_themes_common/macros/portlet" />
             </tal:publications>
        </tal:localsite>
    </div>

    <div metal:fill-slot="portlets_two_slot">
     <tal:localsite condition="python: language == 'en'">
       <metal:rss use-macro="here/portlet_gazette/macros/portlet" />
       <metal:ecotip use-macro="here/portlet_ecotip/macros/portlet" />
       <metal:rss use-macro="here/portlet_all_rss/macros/portlet" />
    </tal:localsite>

       <div id="english-news" tal:condition="python: language != 'en'" i18n:domain="eea.translations">
        <strong i18n:translate="Latest addition">Latest addition</strong><br/><strong i18n:translate="EEA main website">EEA main website</strong> 
        (<strong i18n:translate="English">English</strong>)
        <tal:portlets repeat="portlet context/@@latesthighlightsInEnglish_portlets">
        <metal:macro use-macro="here/portlet_themes_common/macros/portlet" />
        </tal:portlets>
       </div>
    </div>



   <div metal:fill-slot="main">
        <h1 class="hiddenStructure" tal:content="context/Title">EEA Home page</h1>     
	    <tal:main-macro metal:define-macro="main">
            <div metal:use-macro="here/document_actions/macros/document_actions">
                Document actions (print, sendto etc)
            </div>
            	<div id="highlights-block"  tal:define="global frontpage_view context/@@frontpage_highlights;">
                        <div  id="top-news-area" class="column-area">
                                                <div metal:use-macro="here/highlight_macros/macros/high">
                                                        Top Highlights
                                                </div>
                        </div>
                        <div id="articles-area" class="column-area">
                                               <h2 class="column-title" i18n:domain="eea.translations" i18n:translate="Articles">Featured articles</h2>
                                               <div metal:use-macro="here/highlight_macros/macros/highArticles">
							Top articles
						</div>
                                                <div metal:use-macro="here/highlight_macros/macros/middleArticles">
                                                        Middle articles
                                                </div>
                                                <div metal:use-macro="here/highlight_macros/macros/lowArticles">
                                                        Low articles
                                                </div>
                                                <div class="portletFooter">
                                                     <p><a href="articles" title="archive" class="moreLink" i18n:attributes="title" i18n:translate="archive">archive</a></p>
                                                </div>
                        </div>
			<div id="highlights-area" class="column-area">
						<h2 class="column-title" i18n:translate="News">News</h2>
						<div metal:use-macro="here/highlight_macros/macros/middle">
							Middle Highlights
						</div>
			                        <div class="visualClear"><!-- &nbsp; --></div>
						<div metal:use-macro="here/highlight_macros/macros/low">
							Bottom Highlights
						</div>
                                                <div class="portletFooter">
                                                     <p><a href="highlights" title="archive" class="moreLink" i18n:attributes="title" i18n:translate="archive">archive</a></p>
                                                </div>
                        </div>
		</div>
           </tal:main-macro>
    </div>

  </body>
</html>
