    float: left;
    width: 5em;
    padding: 0 0.5em;
    margin: 0 1em 0 0;
}

dl.wizard dt.currentStep {
    background: &dtml-darkBackgroundColor;;
}

<dtml-comment>Fix for IE when applying nifty corners on dl.wizard dt </dtml-comment>
* html dl.wizard dt {
    width: 1em;
    padding: 5px 2px 5px 10px;
}

