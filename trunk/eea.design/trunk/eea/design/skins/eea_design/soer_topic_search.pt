<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main" tal:define="view context/@@soer_topic_search_logic">

            <h1 tal:content="view/getTopicLabel"></h1>

            <p class="documentDescription">
                Below you will find all SOER content related to <span tal:content="view/getTopicLabel"/>
            </p>

            <div class="visualClear"></div>

            <h2>Synthesis</h2>
            <div tal:repeat="item view/getSynthesisReport">
                <img tal:attributes="src item/imgURL"/>
                <strong tal:content="item/title"/>
            </div>

            <h2>Europe's environment: thematic assessments</h2>
            <div tal:repeat="item view/getThematicAssesments">
                <img tal:attributes="src item/imgURL"/>
                <strong tal:content="item/title"/>
            </div>

            <h2>Europe and the world: global megatrends</h2>
            <div tal:repeat="item view/getGlobalMegatrends">
                <img tal:attributes="src item/imgURL"/>
                <strong tal:content="item/title"/>
            </div>

            <h2>Country environment</h2>
            <div tal:repeat="item view/getCountryEnvironment">
                <img tal:attributes="src item/imgURL"/>
                <strong tal:content="item/title"/>
            </div>

        </metal:main-macro>
    </div>
</body>

</html>
