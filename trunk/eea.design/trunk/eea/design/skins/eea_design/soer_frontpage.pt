<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main">

            <h1 tal:content="object_title" class="documentFirstHeading">
                Title or id
            </h1>

            <p class="documentDescription"
               tal:content="here/Description"
               tal:condition="here/Description">
                Description
            </p>

            <div class="visualClear"></div>

            <div id="tag-cloud">
                <div id="tag-cloud-content">
                    tag cloud ...
                </div>
            </div>
            <div id="boxes" tal:define="view nocall:context/@@soer_frontpage_logic">
                <div class="content-column-one">
                    <dl class="portlet">
                        <dt class="portletHeader">Search box</dt>
                        <dd class="portletItem">
                            <span id="search-url" tal:content="view/getSearchURL"></span>
                            <form id="free-text-search" method="get" tal:attributes="action view/getSearchURL">
                                <strong>Free text search</strong>
                                <br/>
                                <p>
                                    <input type="text" name="q" />
                                    <input type="submit" name="search" value="Go!" />
                                </p>
                            </form>
                            <form id="topic-search" method="get" tal:attributes="action view/getTopicSearchURL">
                                <strong>Browse SOER by topic</strong>
                                <p>
                                <select name="topic">
                                    <tal:block tal:repeat="item view/getSoerTopics">
                                        <option tal:attributes="value item/tags" tal:content="item/label">Lorem ipsum</option>
                                    </tal:block>
                                </select>
                                <input type="submit" value="Go!"/>
                                </p>
                            </form>
                            <form id="geo-search" method="get" tal:attributes="action view/getSearchURL">
                                <strong>Browse SOER geographically</strong>
                                <br/>
                                <p>
                                <select name="geo">
                                    <tal:block tal:repeat="item view/getSoerLocations">
                                        <option tal:attributes="value item/tags" tal:content="item/label">Lorem ipsum</option>
                                    </tal:block>
                                </select>
                                <input type="submit" value="Go!"/>
                                </p>
                            </form>
                        </dd>
                    </dl>
                    <dl class="portlet">
                        <dt class="portletHeader">Key fact</dt>
                        <dd class="portletItem">...</dd>
                    </dl>
                </div>
                <div class="content-column-two">
                    <dl class="portlet" id="video-portlet">
                        <dt class="portletHeader">Video</dt>
                        <dd class="portletItem" tal:define="html context/soer_video/getText|nothing">
                            <tal:vidhtml tal:condition="html" tal:replace="structure html"/>
                        </dd>
                    </dl>
                    <dl class="portlet">
                        <dt class="portletHeader">Message</dt>
                        <dd class="portletItem">...</dd>
                    </dl>
                </div>
                <div class="visualClear"></div>
                <div id="free-text-space" tal:define="txt context/getText|nothing">
                    <p tal:condition="txt" tal:replace="structure txt">[Free text]</p>
                </div>
            </div>

        </metal:main-macro>
    </div>
</body>

</html>
