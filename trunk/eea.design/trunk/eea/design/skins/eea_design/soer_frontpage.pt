<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>

<body>
    <div metal:fill-slot="main">
        <metal:main-macro define-macro="main">

            <h1 tal:content="object_title" class="documentFirstHeading">
                Title or id
            </h1>

            <p class="documentDescription"
               tal:content="here/Description"
               tal:condition="here/Description">
                Description
            </p>

            <div class="visualClear"></div>
            <div id="tag-cloud"> 
	 	 <div id="tag-cloud-content" tal:define="faceted_path string:soer/search"> 
	 	                    <metal:tags use-macro="here/portlet_soer_tagcloud/macros/portlet" />
	 	 </div>
            </div>

            <div id="boxes" tal:define="view nocall:context/@@soer_frontpage_logic">
                <div class="content-column-one">
                    <dl class="portlet" id="soerSearchBox" style="padding:0px;">
                        <dt class="portletHeader" style="padding:5px;">Search SOER</dt>
                        <dd class="portletItem">
                            <form id="free-text-search" method="get" action="advanced-search">
                                <strong>Free text search</strong>
                                <p>
                                    <input type="text" name="q" onKeyPress="return disableEnterKey(event)" />
                                    <input type="submit" style="cursor: pointer; cursor: hand;" name="search" value="Go!" />
                                </p>
                            </form>
                            <form id="topic-search" method="get" action="soer_topic_search">
                                <strong>Browse by topic</strong>
                                <p>
                                <select name="topic">
                                    <tal:block tal:repeat="item view/getSoerTopics">
                                        <option tal:attributes="value item/tags" tal:content="item/label">Lorem ipsum</option>
                                    </tal:block>
                                </select>
                                <input type="submit" style="cursor: pointer; cursor: hand;" value="Go!"/>
                                </p>
                            </form>
			    <a href="#portal-sitemap" id="browsegeo" class="fancybox hiddenStructure">Browse geographically</a>
                            <form onsubmit="$('#browsegeo').click(); return false;">
                                <p style="margin-top:10px"><input type="submit" style="cursor: pointer; cursor: hand;" value="Browse geographically..." onclick=""/></p>
                            </form>
                            <div class="hiddenStructure">
			      <metal:geographically use-macro="context/soer_geographically/macros/main" /> 
			    </div>
                              <span><a title="Advanced search" style="float:right;" class="internal-link moreLink" href="resolveuid/50e782ab04ad85d4b501698fa136b66d">Advanced search</a></span>
                        </dd>
                    </dl>
                    <dl class="portlet slidePortlet">
                        <dt class="portletHeader" style="padding:5px;">Key facts</dt>
                        <dd class="portletItem" style="left: 370px;"  tal:repeat="item view/getKeyFacts">
                            <span>
                                <span tal:replace="structure item/text"></span>
				<a href="" title="Read more of the key fact" class="moreLink"
				   tal:attributes="href item/url">more</a>
                            </span>
                        </dd>
                    </dl>
                    <p><a title="All key facts" class="internal-link moreLink" href="resolveuid/10fa976d921e0e9a44d329a927835668">All key facts</a></p>
                </div>
                <div class="content-column-two">
                    <dl class="portlet" id="video-portlet" style="padding:0px;">
                        <dt class="portletHeader">Video</dt>
                        <dd class="portletItem" tal:define="html context/soer_video/getText|nothing">
                            <tal:vidhtml tal:condition="html" tal:replace="structure html"/>
                        </dd>
                    </dl>
                    <dl class="portlet slidePortlet">
                        <dt class="portletHeader" style="padding:5px;">Key messages</dt>
                        <dd class="portletItem" style="left: 370px;" tal:repeat="item view/getMessages">
                            <span>
                                <span tal:replace="structure item/text"></span>
				<a href="" title="Read more of the key message" class="moreLink"
				   tal:attributes="href item/url">more</a>
                            </span>
                        </dd>
                    </dl>
                    <p><a title="All key messages" class="internal-link moreLink" href="resolveuid/d4435d3dae471bb24ae9b24f7a67ef5c">All key messages</a></p>
                </div>
                <div class="visualClear"></div>
                <div id="free-text-space" tal:define="txt context/getText|nothing">
                    <p tal:condition="txt" tal:replace="structure txt">[Free text]</p>
                </div>
            </div>

        </metal:main-macro>
    </div>
</body>

</html>
