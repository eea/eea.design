   clear: right;
}
.portlet .thumbnail-right a { 
   border: none;
}

.portlet .date {
   font-weight: bold;
   font-size: x-small;
}

.portlet dt.portletItem {
   clear: both;
}
.portlet dd.portletSeparator {
   clear: both;
   border-bottom: 1px dotted &dtml-globalBorderColor;;
