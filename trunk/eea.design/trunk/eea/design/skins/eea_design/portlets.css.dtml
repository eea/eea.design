   padding:0;
}
.portlet a.portletHeader {
   font-size: 1em;
   padding-bottom: 0.4em;
}

.portlet-rss  a {
   display:inline;
}

#content dt.portletItem a {
   font-weight: normal;
}

.portlet-rss .portletFooter {
   padding-top: 0.7em;
