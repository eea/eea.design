}

.portlet-rss .portletHeader,
.portlet-promotions .portletHeader {
   margin-bottom: 0;
   padding: 0.3em 0;
}

.portlet-promotions {
   float: left;
   padding: 0 0 0 0;
   width: 100%;
}

.portlet-promotions .portletHeader {
   padding-left: 0.5em;
}
.portlet-promotions .portlet {
   display: block;
}

