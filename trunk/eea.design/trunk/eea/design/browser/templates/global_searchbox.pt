<!-- THE SEARCHBOX DEFINITION -->
<div id="portal-searchbox" metal:define-macro="quick_search"
     tal:define="local_site context/@@plone_portal_state/local_site">
    <form action="http://glossary.eea.europa.eu/terminology/sitesearch" tal:attributes="action python:'http://glossary.'+request.get('LANGUAGE', 'en')+'.eea.europa.eu/terminology/sitesearch'" id="searchbox_terminology" class="searchforms">
        <tal:translated condition="python:request.get('LANGUAGE','en') != 'en'">
            <input type="text" name="term" size="35" i18n:attributes="title europe-environment" title="Search Europe's environment" />
        </tal:translated>
        <tal:notranslation condition="python:request.get('LANGUAGE','en') == 'en'">
            <input type="text" name="term" size="35" title="Search Europe's environment"
                    i18n:attributes="title" />
        </tal:notranslation>
            <input class="searchButton"
                   type="submit"
                   value="Search"
                   i18n:attributes="value label_search" />
    </form>
      <a id="search_advanced_link" href="/help/advanced-search"
               i18n:translate="advanced_search" tal:attributes="href string:${local_site}/help/advanced-search"
               >Advanced search</a>
      <a id="search_glossary_link" href="http://glossary.eea.europa.eu/"
         i18n:translate="az_glossary"
         tal:attributes="href python:'http://glossary.%s.eea.europa.eu'%request.get('LANGUAGE', 'en')"
         >A-Z Glossary</a>
</div>
