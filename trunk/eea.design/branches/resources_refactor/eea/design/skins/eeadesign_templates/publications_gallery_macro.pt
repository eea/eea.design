<tal:defines tal:define="frontpage_view context/@@frontpage_highlights;">

        <tal:publications metal:define-macro="publications"
                          tal:define="language python:request.get('Language');
                                      folderContents python: frontpage_view.getPublications() if not language else frontpage_view.getPublications(language=language);
                                      plone_view nocall:plone_view|context/@@plone;
                                      ajax python:True">

            <tal:folderContents condition="folderContents">
                <div metal:use-macro="here/frontpage_macros/macros/gallery-condition" />
            </tal:folderContents>

            <metal:languages tal:condition="not:folderContents">
                <tal:defines tal:define="languages python:frontpage_view.getResultsInAllLanguages('getPublications')">
                    <metal:results use-macro="here/articles_gallery_macro/macros/noresults" />
                </tal:defines>
            </metal:languages>

        </tal:publications>

</tal:defines>
