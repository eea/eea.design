<tal:sections tal:define="portal_tabs view/portal_tabs"
     i18n:domain="eea">
     <div id="globalnav-holder">
        <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>
        <ul id="portal-globalnav" 
            tal:define="selected_tab python:view.selected_portal_tab">
        <metal metal:use-macro="here/main_template/macros/short_colophon">
        <tal:cond condition="short_colophon" metal:fill-slot="colophon_slot">
            <a href="/" accesskey="2">
                 <img src="" alt="EEA"
                      tal:attributes="src string:logo.gif"  class="visualFloatLeft" id="multimedia-logo" />
            </a>
        </tal:cond>
        </metal>

            <tal:tabs tal:repeat="tab portal_tabs">
                <li tal:define="tid tab/id"
                 tal:attributes="id string:portaltab-${tid};
                                class python:selected_tab==tid and 'selected' or 'plain'">
                 <a href=""
                   tal:content="tab/name"
                   tal:attributes="href tab/url;
                                   title tab/description|nothing;">
                    Tab Name
                </a></li>
            </tal:tabs>
        </ul>
    </div>
</tal:sections>
