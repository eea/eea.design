<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eea" tal:omit-tag="">


<div metal:define-macro="news"
		id="news-highlights" 
		class="highlights"
		tal:define="folderContents frontpage_view/getNews;
		plone_view nocall:plone_view|here;
        hide_listing python: False;
        hide_album python: True;"
        tal:condition="folderContents|nothing">
        <ul class="gallery-layout-selection">
            <a href="#" class="list-layout active-list"><a/>
            <a href="#" class="album-layout"><a/>
        </ul>
        <div metal:use-macro="here/frontpage_macros/macros/gallery-items" />
</div>


<div metal:define-macro="highArticles" 
		id="articles-high" 
		class="highlights"
		tal:define="highlights frontpage_view/getHighArticles;
		            plone_view nocall:plone_view|here;">
    <metal:items use-macro="here/frontpage_macros/macros/middlenews-long" />
</div>

<metal:spotlight metal:define-macro="spotlightItem" 
            tal:define="spotlight frontpage_view/getSpotlight;
		                plone_view nocall:plone_view|here;"
		    tal:condition="spotlight">
    <div id="spotlight-box" class="roundedCorners">
        <h2 class="column-title" i18n:domain="eea" i18n:translate="topic-in-spotlight">Topic in the spotlight</h2>


        <div id="spotlight-item"
            class="spotlight">
            <div class="figure-left"><img alt="" tal:attributes="src string:${spotlight/url}/image_thumb; title spotlight/title; alt spotlight/title" /></div>
            <h3 class="highlight">
                <a href="#" class="noPrint"
           	        tal:attributes="href spotlight/url"
           		    tal:content="spotlight/title">
       	    	        Spotlight Title</a></h3>
            <p tal:content="spotlight/description">description</p>

            <p><a href="#" class="moreLink"
                tal:attributes="href spotlight/url">Read more</a></p>


        </div>
    </div>

</metal:spotlight>

<div metal:define-macro="publications" 
		id="publications-highlights" 
		class="highlights"
		tal:define="folderContents frontpage_view/getPublications;
        plone_view nocall:plone_view|here;
        hide_listing python: False;
        hide_album python: True;"
        tal:condition="folderContents|nothing">
        <ul class="gallery-layout-selection">
            <a href="#" class="list-layout active-list"><a/>
            <a href="#" class="album-layout"><a/>
        </ul>
        <div metal:use-macro="here/frontpage_macros/macros/gallery-items" />
</div>

<div metal:define-macro="articles" 
		class="highlights"
		id="articles-highlights" 
        tal:define="
        frontpage_view context/@@frontpage_highlights;
        folderContents frontpage_view/getArticles;
        hide_listing python: False;
        hide_album python: True;
        "
        tal:condition="folderContents|nothing">
        <ul class="gallery-layout-selection">
            <a href="#" class="list-layout active-list"><a/>
            <a href="#" class="album-layout"><a/>
        </ul>
        <div metal:use-macro="here/frontpage_macros/macros/gallery-items" />
</div>


<div metal:define-macro="middle-short"
        class="highlights"
                id="highlights-middle"
                tal:define="highlights frontpage_view/getMedium;
                            plone_view nocall:plone_view|here">

  <metal:items  define-macro="middlenews-short"
                tal:condition="highlights"
                tal:repeat="hl highlights">

     <div class="highlightMiddle shortNews">
            
             <h3 class="shortNewsTitle">
             <a href="#" class="noPrint"
                        tal:attributes="href hl/getUrl"
                        tal:content="hl/getNewsTitle">
                                Highlight Title</a></h3>

             <span class="date"
                  tal:define="date python:plone_view.toLocalizedTime(hl['effective'])"
                  tal:content="date">07 Dec 2005 </span>
             <br clear="all" />
       </div>
    </metal:items>
</div>


<!-- featured article macro -->
<div metal:define-macro="middle-long"
        class="highlights"
                id="highlights-middle"
                tal:define="highlights frontpage_view/getMedium;
                            plone_view nocall:plone_view|here">

  <metal:items  define-macro="middlenews-long"
                tal:condition="highlights"
                tal:repeat="hl highlights">

          <!-- teaser and read more -->
          <!--<metal:teasers use-macro="here/frontpage_macros/macros/teaser" />-->

            <div class="figure-left">
                      <tal:image define="figure hl/media|nothing;
                               figure_link hl/getUrl;
                               figure_scale string:mini;"
                             tal:condition="figure">
                        <tal:image tal:define="figure hl/media|nothing;
                        figure_link hl/getUrl;
                        figure_scale string:mini;
                        figure_title figure/Title|nothing;
                        "
                        tal:condition="figure">
                            <span tal:replace="structure figure/getScale"> </span> 
                        </tal:image>
                 </tal:image>
            </div>

	    <h3 class="highlight">
	       <a href="#" class="noPrint"
	       		tal:attributes="href hl/getUrl"
	       		tal:content="hl/getNewsTitle">
	       			Highlight Title</a></h3>

            <p tal:content="hl/getTeaser">teaser</p>
            <p><a href="#" class="moreLink"
                    tal:attributes="href hl/getUrl">Read more</a></p>
          <!-- end teaser and read more -->
    </metal:items>
</div>
<!-- end featured article macro -->

<!-- promotion_gallery macro -->
<metal:promos metal:define-macro="promo-gallery"
                tal:define="highlights python: frontpage_view.getPromotions;
                            plone_view nocall:plone_view|here">


    <div id="gallery-content-outer"> 
  <ul id="promo-gallery-content"> 
      <metal:pritems  
                    tal:condition="highlights"
                    tal:repeat="hl highlights">
                        <li>
                        <tal:image tal:define="figure hl/getImage|nothing;
                        figure_link hl/getUrl|hl/absolute_url|nothing;
                        figure_scale string: preview;
                        figure_title figure/title|nothing;"
                        tal:condition="figure">
                        <tal:Link tal:condition="figure_link">
                            <a href="" title="" class="noPrint"
                               tal:attributes="href figure_link|nothing;
                               title figure_title;">
                            <img alt="" tal:attributes="src string:${hl/absolute_url}/image_preview; title figure/title; alt figure/title" />
                         </a>
                         </tal:Link>
                        <tal:noLink tal:condition="not: figure_link">
                            <img alt="" tal:attributes="src string:${hl/absolute_url}/image_preview; title figure/title; alt figure/title" />
                        </tal:noLink>
                        </tal:image>
                    <div class="promo-item-desc">
                        <h3><a href="#" class="noPrint"
                                tal:attributes="href hl/getUrl|hl/absolute_url|nothing"
                                tal:content="hl/title">
                                Highlight Title</a></h3>
                         <span tal:define="description hl/Description|string: Description goes here" tal:content="python:plone_view.cropText(description,122)" />   
                
                    </div>
                        </li>    
        </metal:pritems>
    </ul> 
    </div>

<!-- navigation outer -->

<div id="navigator-outer">
 <ul id="promo-navigator"> 
  <metal:items  define-macro="middlenews-promo"
                tal:condition="highlights"
                tal:repeat="hl highlights">
                    <li>
                        <div>
                        <tal:image tal:define="figure hl/getImage|nothing;
                        figure_link hl/getUrl;
                        figure_scale string:thumb;
                        figure_title figure/title|nothing;
                        "
                        tal:condition="figure">
                            <img alt="" tal:attributes="src string:${hl/absolute_url}/image_thumb; title figure/title; alt figure/title" />
                        </tal:image>

                        <h3 tal:content="hl/Title">Highlight Title</h3>
                    </div>
                    </li>
  </metal:items>
        </ul>
    </div>
</metal:promos>
<!-- end promotion_gallery macro -->

<div metal:define-macro="multimedia" 
		class="highlights"
		id="multimedia-highlights" 
        tal:define="folderContents frontpage_view/getMultimedia;
        hide_album python: False;
        hide_listing python: True;"
        tal:condition="folderContents|nothing">
        <ul class="gallery-layout-selection">
            <a href="#" class="list-layout"><a/>
            <a href="#" class="album-layout active-album"><a/>
        </ul>
        <div metal:use-macro="here/frontpage_macros/macros/gallery-items" />
</div>


<div metal:define-macro="datamaps" 
		class="highlights"
        id="datamaps-highlights"> 
</div>

<metal:gallery-items define-macro="gallery-items"
                     tal:define="visible_album python: 'hiddenStructure' if hide_album else '';
                                visible_listing python: 'hiddenStructure' if hide_listing else '';">
        <div class="gallery-ajax">
            <div tal:attributes="class string: gallery-listing ${visible_listing}">
                <div metal:use-macro="here/folder_summary_view/macros/listing"></div>
            </div>
            <div tal:attributes="class string: gallery-album ${visible_album}">
                <div metal:use-macro="here/atct_album_view/macros/listing-nobatch"></div>
            </div>
        </div>
</metal:gallery-items>

<metal:ajax-items define-macro="ajax-items">
            <div class="gallery-listing">
                <div metal:use-macro="here/folder_summary_view/macros/listing"></div>
            </div>
            <div class="gallery-album">
                <div metal:use-macro="here/atct_album_view/macros/listing-nobatch"></div>
            </div>
</metal:ajax-items>

</html>
