<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eea" tal:omit-tag="">
<div metal:define-macro="high"
		id="highlights-high" 
		class="highlights"
		tal:define="highlights frontpage_view/getHigh;
		            plone_view nocall:plone_view|here;">
	
    <div class="highlightHigh" metal:define-macro="highnews"
    		tal:condition="highlights" 
    		tal:repeat="hl highlights">
         <div class="visualPadding" style="padding:0 1em 0;">
          <h2 class="highlight"  style="font-size:150%;">
	       <a href="#" class="noPrint"
                  tal:attributes="href hl/getUrl"
                  tal:content="hl/getNewsTitle">
	       			Highlight Title</a></h2>
   
            <div class="figure-left">
                      <tal:image tal:define="figure hl/media|nothing;
                               figure_link hl/getUrl;
                               figure_scale string:thumb;"
                             tal:condition="figure">
                   <metal:thefigure use-macro="here/media_floating_macros/macros/figure-caption" />
                 </tal:image>
            </div>

	
	   <span class="date" 
              tal:define="date python:plone_view.toLocalizedTime(hl['effective'])" 
              tal:content="date"> 07 Dec 2005 </span>
           <p class="teaser">
	       <span tal:replace="structure hl/getTeaser">Teaser</span>
               <a href="" title=""
                  tal:attributes="href hl/getUrl;
	                          title hl/getNewsTitle" class="moreLink"
                  i18n:translate="box_morelink">More</a>
               <br clear="all" /></p>
         </div>
        <div class="visualClear"><!-- --></div>
     </div>
</div>

<div metal:define-macro="highArticles" 
		id="articles-high" 
		class="highlights"
		tal:define="highlights frontpage_view/getHighArticles;
		            plone_view nocall:plone_view|here;">
    <metal:items use-macro="here/frontpage_macros/macros/middlenews-long" />
</div>

<div metal:define-macro="middle" 
        class="highlights"
		id="highlights-middle" 
		tal:define="highlights frontpage_view/getMedium;
		            plone_view nocall:plone_view|here">

  <metal:items  define-macro="middlenews"
                tal:condition="highlights"
                tal:repeat="hl highlights">
		
        <!-- accordion panels -->
	    <div class="panel">
	       <p class="noPrint"
	       		tal:content="hl/getNewsTitle">
                Highlight Title</p>
	   	     <p class="date" 
                  tal:define="date python:plone_view.toLocalizedTime(hl['effective'])" 
	    	  tal:content="date">07 Dec 2005 </p> 
        </div>
        <!-- end_accordion panels -->

     <div class="highlightMiddle">
  
	    <h3 class="highlight">
	       <a href="#" class="noPrint"
	       		tal:attributes="href hl/getUrl"
	       		tal:content="hl/getNewsTitle">
	       			Highlight Title</a></h3>
          <!-- teaser and read more -->
          <metal:teaser define-macro="teaser">
            <div class="figure-left">
                      <tal:image define="figure hl/media|nothing;
                               figure_link hl/getUrl;
                               figure_scale string:thumb;"
                             tal:condition="figure">
                   <metal:thefigure use-macro="here/media_floating_macros/macros/figure-caption" />
                 </tal:image>
            </div>

	   	     <span class="date" 
                  tal:define="date python:plone_view.toLocalizedTime(hl['effective'])" 
	    	  tal:content="date">07 Dec 2005 </span> 
            <p tal:content="hl/getTeaser">teaser</p>
            <p><a href="#" class="noPrint"
                    tal:attributes="href hl/getUrl">Read more</a></p>
           </metal:teaser>
           <!-- end teaser and read more -->
       </div>
    </metal:items>
</div>

<div metal:define-macro="middle-short"
        class="highlights"
                id="highlights-middle"
                tal:define="highlights frontpage_view/getMedium;
                            plone_view nocall:plone_view|here">

  <metal:items  define-macro="middlenews-short"
                tal:condition="highlights"
                tal:repeat="hl highlights">

     <div class="highlightMiddle shortNews">
            
             <h3 class="shortNewsTitle">
             <a href="#" class="noPrint"
                        tal:attributes="href hl/getUrl"
                        tal:content="hl/getNewsTitle">
                                Highlight Title</a></h3>

             <span class="date"
                  tal:define="date python:plone_view.toLocalizedTime(hl['effective'])"
                  tal:content="date">07 Dec 2005 </span>
             <br clear="all" />
       </div>
    </metal:items>
</div>


<!-- featured article macro -->
<div metal:define-macro="middle-long"
        class="highlights"
                id="highlights-middle"
                tal:define="highlights frontpage_view/getMedium;
                            plone_view nocall:plone_view|here">

  <metal:items  define-macro="middlenews-long"
                tal:condition="highlights"
                tal:repeat="hl highlights">

          <!-- teaser and read more -->
          <metal:teasers use-macro="here/frontpage_macros/macros/teaser" />
          <!-- end teaser and read more -->
    </metal:items>
</div>
<!-- end featured article macro -->

<!-- promotion_gallery macro -->
<metal:promos metal:define-macro="promo-gallery"
                tal:define="highlights frontpage_view/getMedium;
                            plone_view nocall:plone_view|here">


    <div id="gallery-content-outer"> 
  <ul id="promo-gallery-content"> 
      <metal:pritems  
                tal:define="highlights python: frontpage_view.getMedium(scale='preview');"
                    tal:condition="highlights"
                    tal:repeat="hl highlights">
                        <li>
                        <tal:image tal:define="figure hl/media|nothing;
                        figure_link hl/getUrl|nothing;
                        figure_scale string: preview;
                        figure_title figure/Title|nothing;"
                        tal:condition="figure">
                        <tal:Link tal:condition="figure_link">
                            <a href="" title="" class="noPrint"
                               tal:attributes="href figure_link|nothing;
                               title figure_title;">
                              <span tal:replace="structure figure/getScale"> </span> 
                         </a>
                         </tal:Link>
                        <tal:noLink tal:condition="not: figure_link">
                            <span tal:replace="structure figure/getScale"> </span> 
                        </tal:noLink>
                        </tal:image>
                    <div class="promo-item-desc">
                        <h3><a href="#" class="noPrint"
                                tal:attributes="href hl/getUrl"
                                tal:content="hl/getNewsTitle">
                                Highlight Title</a></h3>
                        Author: <span tal:define="author hl/Creator|string: EEA" tal:content="author" />   
                        Published: <span  
                                tal:define="date python:plone_view.toLocalizedTime(hl['effective'])" 
                                tal:content="date">07 Dec 2005 </span>
                    </div>
                        </li>    
        </metal:pritems>
    </ul> 
    </div>

<!-- navigation outer -->

<div id="navigator-outer">
 <ul id="promo-navigator"> 
  <metal:items  define-macro="middlenews-promo"
                tal:condition="highlights"
                tal:repeat="hl highlights">
                    <li>
                        <div>
                        <tal:image tal:define="figure hl/media|nothing;
                        figure_link hl/getUrl;
                        figure_scale string:thumb;
                        figure_title figure/Title|nothing;
                        "
                        tal:condition="figure">
                            <span tal:replace="structure figure/getScale"> </span> 
                        </tal:image>

                        <h3 tal:content="hl/getNewsTitle">Highlight Title</h3>
                    </div>
                    </li>
  </metal:items>
        </ul>
    </div>
</metal:promos>
<!-- end promotion_gallery macro -->

<div metal:define-macro="multimedia" 
		class="highlightMiddle shortNews"
		id="multimedia-highlights" 
		tal:define="vids frontpage_view/getMultimedia;"
                tal:condition="vids|nothing">
		    
    <tal:defines  
        tal:define="first_vid python:vids[0];
 	            three_other python:vids[1:];">
    <h2 class="column-title" i18n:domain="eea" i18n:translate="inthespotlight">In the spotlight</h2>
    <h3 class="shortNewsTitle visualPadding">
        <a class="video-fancybox"
            href="#"
            tal:content="first_vid/title"
            tal:attributes="href first_vid/url">
        </a>
    </h3>
    <div class="visualPadding">
        <ul>
            <metal:items tal:repeat="vid three_other" >
                <li class="vidthumb" tal:define="last repeat/vid/end" tal:attributes="class python:test(last, 'vidthumb last', 'vidthumb')">
                    <a class="video-fancybox" href="" tal:attributes="href vid/listing_url">
                        <img src="" tal:attributes="src string:${vid/url}/image_wide; title vid/title" />
                    </a>
                </li>
            </metal:items>
        </ul>
        <div id="big_vid">
            <a class="video-fancybox" href="" tal:attributes="href first_vid/listing_url">
                <img src="" tal:attributes="src string:${first_vid/url}/image_wide; title first_vid/title" />
            </a>
        </div>
        <div class="visualClear"><!-- --></div>
    </div>
    </tal:defines>
</div>


</html>
