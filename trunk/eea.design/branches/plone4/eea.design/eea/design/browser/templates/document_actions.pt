<div tal:omit-tag=""
     i18n:domain="plone">

    <div class="visualClear"><!-- --></div>

    <div class="documentActions">
        <tal:docactions tal:condition="view/actions">

            <h5 class="hiddenStructure"
                i18n:translate="heading_document_actions">
                Document Actions
            </h5>
            <h2 i18n:translate="share_with_others" class="share-title">Share with others</h2>

            <ul tal:define="normalizeString nocall: context/@@plone/normalizeString">
                <li tal:repeat="daction view/actions"
                    tal:attributes="id python:'document-action-' + normalizeString(daction['id'])">
                    <a href=""
                       tal:attributes="href daction/url;
                                         title daction/description"
                       tal:content="daction/title">
                    </a>
                </li>
            </ul>
        </tal:docactions>

        <tal:lang tal:condition="exists: here/global_languageselector">
            <metal:lang
                    use-macro="context/global_languageselector/macros/language">
                Language selector
            </metal:lang>
        </tal:lang>

        <div tal:replace="structure provider:plone.documentactions"/>

    </div>
</div>