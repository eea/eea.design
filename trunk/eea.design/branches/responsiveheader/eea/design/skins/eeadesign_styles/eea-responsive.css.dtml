@media screen and (min-width: 992px) {
  #footer-wrapper {
    min-width: 973px; }

  #portal-footer,
  #portal-colophon .colophonWrapper {
    min-width: 950px; }

  #cross-site-top {
    min-width: 970px; }

  #header-holder {
    min-width: 995px; }

  #visual-portal-wrapper, #portal-globalnav, #portal-header {
    min-width: 995px;
    max-width: 1024px; } }
@media screen and (max-width: 768px) {
  #portal-colophon .colophonWrapper, .colophon-middle {
    text-align: center; }

  .colophon-left, .colophon-right, .colophon-right span {
    width: 100%;
    float: none; }

  .colophon-right img {
    float: none; }

  .colophon-right {
    margin-top: 1em; }

  .colophon-middle {
    margin-top: 0; }

  #portaltab-europe {
    width: 185px;
    padding-right: 95px;
    background: url("&dtml-portal_url;/eu-flag.png") no-repeat 97px -5px; }
    #portaltab-europe a {
      padding-top: 0.5em !important; }

  .navbar-collapse {
    width: 100%; } }
@media screen and (max-width: 480px) {
  #portal-top {
    background-color: transparent; }

  #portal-searchbox {
    max-width: 300px;
    text-align: left; }
    #portal-searchbox input {
      width: 215px; }
    #portal-searchbox a {
      color: #FFF; }
    #portal-searchbox input.searchButton {
      background-color: orange; }

  .panel {
    max-width: 335px;
    left: 20px !important; }

  .panel-top {
    left: 0 !important; }

  .panel-content {
    min-width: 320px; }

  #chooselang {
    -webkit-column-count: 2;
    -moz-column-count: 2;
    column-count: 2; }

  #portal-externalsites a, #portal-siteactions a {
    display: block;
    padding: 0.5em 0; }

  #portal-externalsites, #portal-siteactions,
  #secondary-portaltabs,
  #portal-searchbox {
    float: none; }

  #portal-externalsites li, #portal-siteactions li,
  #portal-globalnav li {
    display: block;
    text-align: left; }

  #portal-globalnav li a {
    padding: 0.5em; }

  #portal-personaltools-wrapper,
  .portal-logo,
  #siteaction-login {
    display: none !important; }

  #searchbox_terminology input[type="text"] {
    width: 64%; }

  navbar-collapse.in {
    overflow-y: visible; }

  #globalnav-holder, #portal-globalnav {
    height: inherit; }

  #cross-site-top .portlet {
    margin-bottom: 0;
    padding: 0; }
  #cross-site-top .pane, #cross-site-top .portlet {
    background-color: #FFF; }

  #chooselang li {
    display: list-item;
    list-style-image: url("/www/bullet.gif");
    list-style-type: square;
    list-style-position: inside; } }
