<taldefines tal:define="frontpage_view context/@@frontpage_highlights;">

    <metal:articles tal:condition="python: not request.get('AllLanguages')">
        <tal:multimedia metal:define-macro="multimedia"
                        tal:define="language python:request.get('Language');
                                      folderContents python: frontpage_view.getMultimedia() if not language else frontpage_view.getMultimedia(language=language);
                            ajax python:True;
                            frontpage_properties context/portal_properties/frontpage_properties;
                            limit_display frontpage_properties/noOfMultimedia|python:6;
                            ">
                <div metal:use-macro="here/frontpage_macros/macros/gallery-condition" />
        </tal:multimedia>
    </metal:articles>

    <metal:languages tal:condition="python:request.get('AllLanguages')">
        <tal:defines
                tal:define="languages python:frontpage_view.getResultsInAllLanguages('getMultimedia')">
            <metal:results use-macro="here/articles_gallery_macro/macros/noresults" />
        </tal:defines>
    </metal:languages>
</taldefines>
