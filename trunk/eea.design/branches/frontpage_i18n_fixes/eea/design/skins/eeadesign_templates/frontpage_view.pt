<tal:block tal:define="foo python:request.set('disable_plone.leftcolumn', 1);
bar python:request.set('disable_plone.rightcolumn', 1);"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    i18n:domain="eea"
    metal:use-macro="context/main_template/macros/master">
    <head>

    </head>
    <body>

        <div metal:fill-slot="main" id="content-core">

            <h1 class="hiddenStructure" tal:content="context/Title">EEA Home page</h1>
            <tal:main-macro metal:define-macro="main">
            <div id="highlights-block" tal:define="global frontpage_view context/@@frontpage_highlights;
                   global datamaps_view context/@@data_and_maps_logic">
                <div id="main-content">
                    <div class="visualClear"><!-- &nbsp; --></div>
                    <div id="highlights-area" class="column-area">
                        <!-- promotions_gallery_slideshow-->
                        <metal:promotions 
                        tal:define="frontpage python: True; 
                        promo_view frontpage_view;
                        show_description python:False;">
                        <div metal:use-macro="here/portlet_promo_gallery/macros/portlet">
                            promoted item
                        </div>
                        </metal:promotions>   
                        <!-- end promotions_gallery_slideshow -->

                        <!-- select_topics -->
                        <div id="news-header">
                            <h2 i18n:translate=""> What's new</h2>
                        </div>
                        <!-- end select_topics -->

                        <div class="portalMessage message_disclaimer">
                           <span class="eea-icon eea-icon-flag"></span>
                            <strong i18n:translate="">Welcome to the European Environment Agency.</strong>
                            <p i18n:translate="">This site presents the content we have available in your language.</p>
                            <p i18n:translate="">To explore all our outputs and complete knowledge base, please visit <a href="http://www.eea.europa.eu" i18n:name="site_url">our main website</a> in English.</p>
                        </div>
                        <!-- tabs -->
                        <div metal:define-macro="whatsnew-gallery"
                                tal:define="datapage datapage|string:frontpage;
                                plone_view context/@@plone;
                                language portal_state/language;
                                news_folderContents python: frontpage_view.getNews() if not language else frontpage_view.getNews(language=language);
                                newsandarticles_folderContents python: frontpage_view.getNewsAndArticles() if language and language != 'en' else None;
                                articles_folderContents python: frontpage_view.getArticles() if not language else frontpage_view.getArticles(language=language);
                                publications_folderContents python: frontpage_view.getPublications() if not language else frontpage_view.getPublications(language=language);
                                multimedia_folderContents python: frontpage_view.getMultimedia() if not language else frontpage_view.getMultimedia(language=language);
                                datamaps_folderContents python: datamaps_view.getAllProducts() if not language else datamaps_view.getAllProducts(language=language);
                                allproducts_folderContents python: frontpage_view.getAllProducts() if not language else frontpage_view.getAllProducts(language=language);
                                folderContent python: {'News': news_folderContents, 'Articles': articles_folderContents, 'News and articles': newsandarticles_folderContents, 'Publications': publications_folderContents, 'Multimedia': multimedia_folderContents, 'Data and maps': datamaps_folderContents, 'All products': allproducts_folderContents};"
                                tal:attributes="id string:whatsnew-gallery; data-page string:${datapage};">
                            <ul class="eea-tabs two-rows"
                                tal:define="main_site python: True if language == 'en' else False;
                                            tabnames_en python: ['News', 'Articles'];
                                            tabnames_translation python: ['News and articles'];
                                            tabnames_others python:['Publications', 'Multimedia', 'Data and maps', 'All products'];
                                            tabnames python: tabnames_en + tabnames_others if main_site else tabnames_translation + tabnames_others;
                                            global tabs python: [tab for tab in tabnames if folderContent.get(tab)]">
                                <li tal:repeat="tab tabs">
                                    <a href="#"  i18n:translate=""
                                       tal:content="python:context.translate(tab, domain='eea')" class="block"
                                       tal:attributes="id python: 'tab-datamaps' if tab == 'Data and maps' else 'tab-' + tab.replace(' ', '').lower()">Tabs</a>
                                </li>
                            </ul>
                            <!-- end_tabs -->
                            <select tal:define="items python:here.portal_vocabularies.getVocabularyByName('themes').getVocabularyLines()" id="topic-selector"
                                metal:define-macro="whatsnew-select-topic">
                                <option value="" i18n:translate="">All topics</option>
                                <tal:items tal:repeat="item items">
                                <option
                                tal:define="value python: item[0];"
                                tal:attributes="value value;"
                                tal:content="python:context.translate(item[1], domain='eea')" />
                                </tal:items>
                            </select>

                            <div metal:use-macro="here/frontpage_macros/macros/news" tal:condition="python: 'News' in tabs or 'News and articles' in tabs">
                                News highlights
                            </div>
                            <div metal:use-macro="here/frontpage_macros/macros/articles" tal:condition="python: 'Articles' in tabs">
                                Articles Highlights
                            </div>
                            <div metal:use-macro="here/frontpage_macros/macros/publications" tal:condition="python: 'Publications' in tabs">
                                Publications Highlights
                            </div>
                            <div metal:use-macro="here/frontpage_macros/macros/multimedia" tal:condition="python: 'Multimedia' in tabs">
                                Multimedia Highlights
                            </div>
                            <div metal:use-macro="here/frontpage_macros/macros/datamaps" tal:condition="python: 'Data and maps' in tabs">
                                Data and maps Highlights
                            </div>
                            <div metal:use-macro="here/frontpage_macros/macros/allproducts" tal:condition="python: 'All products' in tabs">
                                All products Highlights
                            </div>
                        </div>

                    </div>

                    <div id="articles-area" class="right-column-area">

                        <!-- featured and spotlight areas -->

                        <tal:featured_article metal:define-macro="featured_article"
                        tal:define="highlights frontpage_view/getHighArticles;
                        archive_url python:here.Language() == 'en' and 'articles' or str(here.Language() + '/articles');
                        archive_href string:${context/@@plone_portal_state/portal_url}/$archive_url;">
                        <div metal:use-macro="here/frontpage_macros/macros/featured-item">
                            <span metal:fill-slot="archive" i18n:translate="">Archive</span>
                            <span metal:fill-slot="box_title" i18n:translate="">Featured article</span>
                        </div>
                        </tal:featured_article>

                        <tal:spotlight
                        tal:define="highlights frontpage_view/getSpotlight;">
                        <div metal:use-macro="here/frontpage_macros/macros/featured-item">
                            <span metal:fill-slot="box_title" i18n:translate="">Topic in the spotlight</span>
                        </div>
                        </tal:spotlight>
                        <!--end featured and spotlight areas -->

                        <!-- shortcuts divs -->
                        <!--div id="forum">
                        <a id="forum-link" href="" tal:attributes="href string:$portal_url/help/infocentre/enquiries/"></a>
                        </div-->

                        <div metal:define-macro="enquiry" id="enquiry-service-shortcut" class="shortcut-default">
                            <div id="enquiry-content">
                                <a id="enquiry-link" href="" tal:attributes="href string:http://community.eea.europa.eu" class="link-plain">
                                    <h2 i18n:translate="">Ask your question</h2>
                                    <tal:block i18n:translate="">EEA Forum, FAQs, discuss and share</tal:block></a>
                            </div>
                        </div>

                        <div metal:define-macro="mobile" id="eea-mobile-shortcut" class="shortcut-default">
                            <div id="mobile-content">
                                <a id="mobileapps-link" href="/mobile" tal:attributes="href string:$portal_url/mobile"
                                   class="link-plain">
                                    <h2 i18n:translate="">Apps for your mobile</h2>
                                    <tal:block i18n:translate="">Environmental information anywhere</tal:block></a>
                            </div>
                        </div>


                        <div metal:use-macro="here/portlet_social_links/macros/portlet">
                                Social links
                        </div>

                        <!-- end shortcuts divs -->
                    </div>

                    <div class="visualClear"><!-- &nbsp; --></div>
                </div>
            </div>

            </tal:main-macro>
        </div>

    </body>
</html>

