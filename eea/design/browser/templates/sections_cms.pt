<!-- THE SEARCHBOX DEFINITION -->
<div id="portal-searchbox" metal:define-macro="quick_search"
        tal:define="local_site context/@@plone_portal_state/local_site"
        i18n:domain="eea">

    <script>
        (function() {
            var cx = '010617083146134556574:ymkqzb7sibw';
            var gcse = document.createElement('script');
            gcse.type = 'text/javascript';
            gcse.async = true;
            gcse.src = 'https://cse.google.com/cse.js?cx=' + cx;
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(gcse, s);
        })();
    </script>
    <div class="gcse-search">&nbsp;</div>

    <div class="eea-search-links">
        <a id="search_advanced_link" href="http://search.apps.eea.europa.eu"
           class="pull-left" i18n:translate="">
            <span i18n:translate="">Search the catalogue</span>
            <img src="" tal:attributes="src string:${local_site}/new_item.png">
        </a>
        <a id="search_glossary_link" class="pull-right"
                 href="http://glossary.eea.europa.eu/"
                 i18n:translate=""
                 tal:attributes="href python:'http://glossary.%s.eea.europa.eu'%request.get('LANGUAGE', 'en')">A-Z Glossary</a>
    </div>
</div>
