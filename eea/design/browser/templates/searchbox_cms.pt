<div id="portal-searchbox"
     i18n:domain="eea"
     tal:define="navigation_root_url view/navigation_root_url;
                 search_input_id view/search_input_id;
                 local_site context/@@plone_portal_state/local_site">
    <form name="searchform" id="searchGadget_form"
          action="search"
          tal:attributes="action string:${navigation_root_url}/@@search;
          id string:${search_input_id}_form">

        <div class="LSBox">
        <span class="eea-icon eea-icon-search">&nbsp;</span>
        <input name="SearchableText"
               type="text"
               size="34"
               value=""
               title=""
               accesskey="4"
               tal:attributes="value request/form/SearchableText|nothing;"
               class="searchField inputLabel" />

        <input class="searchButton"
               type="submit"
               value="Search"
               i18n:attributes="value" />

        <div class="eea-search-links">
            <a id="search_advanced_link" href="http://search.apps.eea.europa.eu"
                class="pull-left" i18n:translate="">
                <span i18n:translate="">Search the catalogue</span>
                <img src="" tal:attributes="src string:${local_site}/new_item.png">
            </a>
            <a id="search_glossary_link" class="pull-right" href="http://glossary.eea.europa.eu/"
                 i18n:translate=""
                 tal:attributes="href python:'http://glossary.%s.eea.europa.eu'%request.get('LANGUAGE', 'en')">
                A-Z Glossary
            </a>
        </div>

        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
        </div>
    </form>

    <div id="portal-advanced-search"
         class="hiddenStructure">
        <a href="#"
           tal:attributes="href string:${navigation_root_url}/search_form"
           i18n:translate=""
           accesskey="5">
            Advanced Search&hellip;
        </a>
    </div>

</div>
