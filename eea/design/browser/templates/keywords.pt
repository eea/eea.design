<div i18n:domain="plone"
     id="mini-category"
     class="eea-accordion-panel"
     tal:define="categories context/Subject|nothing;
                 url_quote  nocall:modules/Products.PythonScripts.standard/url_quote;"
     tal:condition="categories">
  <h2 class="eea-accordion-title eea-icon-left-container" i18n:translate="">Tags</h2>
  <div class="pane">
  <tal:filedunder i18n:translate="label_filed_under">Filed under:</tal:filedunder>
  <span tal:repeat="category categories">
    <a href=""
       class="link-category"
       rel="tag"
       tal:content="category"
       tal:define="quotedCat python:url_quote(category)"
       tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${quotedCat}">
      Category
    </a>
  </span>
    </div>
</div>
