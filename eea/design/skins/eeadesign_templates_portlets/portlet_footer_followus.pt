<metal:portlets metal:define-macro="portlet">

    <div class="colophon-section section-dark section-bordered">

        <h2 i18n:translate="">Follow us</h2>

        <div class="section-centered">

            <a class="link-plain media m-half" title="Follow us on Twitter" href="https://twitter.com/euenvironment" i18n:attributes="title">
                <span class="eea-icon  eea-icon-twitter-square eea-icon-3x"></span></a>
            <a class="link-plain media m-half" title="Follow us on Facebook" href="https://www.facebook.com/European.Environment.Agency" i18n:attributes="title">
                <span class="eea-icon  eea-icon-facebook-square eea-icon-3x"></span></a>
            <a class="link-plain media" title="Follow us on Linked In" href="https://www.linkedin.com/company/european-environment-agency" i18n:attributes="title">
                <span class="eea-icon  eea-icon-linkedin-square eea-icon-3x"></span></a>
            <a class="link-plain media m-half" title="Follow us on YouTube" href="https://www.youtube.com/user/EEAvideos" i18n:attributes="title">
                <span class="eea-icon eea-icon-youtube-square eea-icon-3x"></span></a>
            <a class="link-plain media m-half" title="Subscribe to RSS Feed" href="/subscription/news-feeds" i18n:attributes="title">
                <span class="eea-icon eea-icon-rss-square eea-icon-3x"></span></a>

            <div class="media media--discreet">
                <a class="link-plain media-link m-half" title="Subscribe by email" href="/subscription/targeted-subscription" i18n:attributes="title">
                    <span class="eea-icon eea-icon-3x eea-icon-newspaper-o"></span>
                    <div class="media-body">
                        <span i18n:translate="">Sign up to receive our reports</span>
                        <br>
                        <span i18n:translate="">(print and/or electronic) and</span>
                        <br>
                        <span i18n:translate="">quarterly e-newsletter</span>
                    </div>
                </a>
            </div>

        </div>

    </div>

</metal:portlets>
